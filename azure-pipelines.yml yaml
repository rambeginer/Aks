trigger:
  branches:
    include:
      - main

variables:
  imageName: 'python-sample-app'
  acrLoginServer: 'myacrunique1.azurecr.io'
  tag: '$(Build.BuildId)'

stages:

- stage: BuildAndPush
  displayName: Build and Push to ACR
  jobs:
  - job: DockerBuildPush
    pool:
      vmImage: 'ubuntu-latest'
    steps:
    - checkout: self
    - task: Docker@2
      displayName: Build and Push Docker image
      inputs:
        command: buildAndPush
        containerRegistry: 'acr-connection'
        repository: '$(imageName)'
        tags: |
          $(tag)

- stage: DeployToAKS
  displayName: Deploy to AKS
  dependsOn: BuildAndPush
  jobs:
  - job: Deploy
    pool:
      vmImage: 'ubuntu-latest'
    steps:
    - task: Kubernetes@1
      displayName: Deploy Deployment.yaml
      inputs:
        connectionType: 'Azure Resource Manager'
        azureSubscription: 'azure-connection'
        azureResourceGroup: 'FP' # your resource group
        kubernetesCluster: 'raja-aks-cluster' # your AKS cluster name
        command: apply
        useConfigurationFile: true
        configuration: 'deployment.yaml'

    - task: Kubernetes@1
      displayName: Deploy Service.yaml
      inputs:
        connectionType: 'Azure Resource Manager'
        azureSubscription: 'azure-connection'
        azureResourceGroup: 'FP'
        kubernetesCluster: 'raja-aks-cluster'
        command: apply
        useConfigurationFile: true
        configuration: 'service.yaml'
